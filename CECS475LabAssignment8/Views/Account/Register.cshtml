@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model CECS475LabAssignment8.Models.Account.RegisterViewModel
@{ 

    Layout = "_Layout";

}


<fieldset class="account">

    <h1>New User Registration</h1>

    <br />

    <form role="form" asp-action="Register">
        <div asp-validation-summary="All" class="input-validation-error"></div>

        <div class="form-group">
            @Html.LabelFor(u=> u.EmailAddress);
            @Html.EditorFor(u=>u.EmailAddress);
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Password);
            @Html.EditorFor(u => u.Password);
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.ConfirmPassword);
            @Html.EditorFor(u => u.ConfirmPassword);
        </div>
        <br />
        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Create new user</button>
        </div>

    </form>
</fieldset>
