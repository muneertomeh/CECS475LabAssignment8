@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model CECS475LabAssignment8.Models.Account.LoginViewModel
@{
    Layout = "_Layout";

}


<fieldset class="account">

    <h1>Login</h1>
    <br />
    <form role="form" asp-action="Login">

        <div asp-validation-summary="All" class="input-validation-error"></div>

        <div class="form-group">
            @Html.LabelFor(u => u.EmailAddress);
            @Html.EditorFor(u => u.EmailAddress);
        </div>

        <div class="form-group">
            @Html.LabelFor(u=> u.Password);
            @Html.EditorFor(u=> u.Password);
        </div>

        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input type="checkbox" asp-for="RememberMe" />
            <span asp-validation-for="RememberMe" class="field-validation-error"></span>
        </div>
        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    </form>

    <br />

    <div class="form-group">
        <label>Not Registered?</label>
        <a asp-action="Register">Create a new account</a>
    </div>

</fieldset>
