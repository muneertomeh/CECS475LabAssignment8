@model CECS475LabAssignment8.Models.Review
@{
    Layout = "_Layout";
}


@Html.BeginForm()


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form_group">
                @Html.LabelFor(review => review.Author);
                @Html.EditorFor(review => review.Author);
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form_group">
                @Html.LabelFor(review => review.Content);
                @Html.EditorFor(review => review.Content);
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form_group">
                @Html.LabelFor(review => review.Title);
                @Html.EditorFor(review => review.Title);
            </div>

            <div class="form-group">
                <input type="submit" value="Add Review" class="btn btn-default" />
            </div>

        </form>


    </div>
</div>


